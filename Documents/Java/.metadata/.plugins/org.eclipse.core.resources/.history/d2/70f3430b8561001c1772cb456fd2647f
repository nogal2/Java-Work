package study;

import java.util.Arrays;
import java.util.Scanner;

public class forwhile2439 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		int sum= 0;
		for(int i=1; i <= N; i++) {
			
			for (int j = 1; j <= N-i; j++) {
				System.out.print(' ');
			}
		
			for (int k = 1 ; k <= i; k++) {
			
				System.out.println("*");
			}
			
			System.out.print('\n');
			
		}
		/*
