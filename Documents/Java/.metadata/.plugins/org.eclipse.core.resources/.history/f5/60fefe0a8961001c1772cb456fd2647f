package study;

import java.util.Arrays;
import java.util.Scanner;

public class forwhile2439 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int N = 10;
		int sum= 0;
		for(int i=1; i <= 10; i++) {
			
			for (int j = 1; j <= 10-i; j++) {
				System.out.print(' ');
			}
		
			for (int k = 1 ; k <= i; k++) {
				sum=sum+k;
				System.out.print(sum);
			}
			
			System.out.print('\n');
			
		}
		/*
		for(int i=1; i <= 5; i++) {
			5--;
			for (int j = 1; j <= 5; j++) {
				System.out.print(' ');
			}
			5++;
			for (int k =  ; k <= 5; k++) {
				System.out.print('*');
			}
			5--;
			System.out.print('\n');
			
		}
		/**/
		
	}

}
