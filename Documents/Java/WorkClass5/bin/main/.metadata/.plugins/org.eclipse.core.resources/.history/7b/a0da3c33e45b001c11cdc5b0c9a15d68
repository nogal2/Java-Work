import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class MainClass {

	public static void main(String[] args) {
		
		File file = new File("c:\\myfile\\writeData.txt");	// 쓰기로 하면 자동생성됨
		
		try {
			FileWriter fw = new FileWriter(file);
			fw.write("안녕하세요");
			fw.write("hi hello");
			fw.close();
		
		
		
		
		
		} catch (IOException e) {
			e.printStackTrace();
		}
		

	}

}
