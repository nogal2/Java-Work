package study;

import java.util.Arrays;
import java.util.Scanner;

public class forwhile2439 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		for(int i=1; i <= N; i++) {
			N--;
			for (int j = 1; j <= N; j++) {
				System.out.print(' ');
			}
			for (int k = 4 ; k <= N; k--) {
				System.out.print('*');
			}
			System.out.print('\n');
			
		}
		/*
		for(int i=1; i <= 5; i++) {
			5--;
			for (int j = 1; j <= 5; j++) {
				System.out.print(' ');
			}
			for (int k = 5 ; k <= 5; k--) {
				System.out.print('*');
			}
			System.out.print('\n');
			
		}
		/**/
		
	}

}
