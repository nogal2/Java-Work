package study;

import java.util.Arrays;
import java.util.Scanner;

public class forwhile2439 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		char temp;
		char[] star = new char[N];
		char[] space = new char[N];
		for (int i = 0; i < star.length; i++) {
			space[i] = (char) (space[i] + (char)32);
			star[i] = (char) (star[i]+ (char)42);
			System.out.print((char)space[i]);
			System.out.println((char)star[i]);
		}
		
		char c = (char)42;
		System.out.println(c);
		

	}

}
